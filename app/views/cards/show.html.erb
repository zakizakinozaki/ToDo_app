<div class='carddetailPage'>
  <div class="container">
    <div class="cardContents">
      <div class="cardContents_title">
        <div>タイトル</div>
        <h2><%= @card.name %></h2>
      </div>
      <div class="cardContents_memo">
        <div>メモ</div>
        <div><%= @card.memo %></div>
      </div>
      <div class="cardContents_listStatus">
        <div>リスト名</div>
        <div><%= @card.list.name %></div>
      </div>

      <div class="cardContents_btnArea">
        <%= link_to '削除する', list_card_path(@card.list, @card), class: "delete_btn btn submitBtn", method: :delete, data: { confirm: "このカードを削除して大丈夫ですか?" } %>

        <%= link_to '編集する', edit_list_card_path(@card.list, @card), class: "edit_btn btn submitBtn" %>
      
      </div>
      <div class="cardContents_btnArea">
      <%=link_to '戻る', lists_path, class:'btn submitBtn'%>
      </div>
    </div>
  </div>
</div>